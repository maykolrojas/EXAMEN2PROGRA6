@page
@model WebApp.Pages.Orden.EditModel
@{
}

<div id="AppEdit" class="container">
    <div class="card">
        <div class="card-header">
            @(Model.id.HasValue? "Actualizar": "Nueva Orden")
        </div>
        <div class="card-body">
            <form id="FormEdit" method="post">
                <input type="hidden" asp-for="Entity.IdOrden" />




                <div class="form-group mb-3">
                    <label for="Entity.Identificacion" class="form-label">NombreProducto</label>
                    <input type="text" class="form-control" asp-for="Entity.CantidadProducto" maxlength="250" required>
                </div>

                <div class="form-group mb-3">
                    <label for="Entity.Nombre" class="form-label">PrecioProducto</label>
                    <input type="text" class="form-control" asp-for="Entity.Estado" maxlength="250" required>
                </div>


                <div class="row">
                    <div class="col-4">
                        <button type="submit" class="btn btn-primary">
                            @(Model.id.HasValue? "Actualizar": "Agregar")
                        </button>
                    </div>

                </div>

            </form>

        </div>
    </div>

</div>

@section Scripts
{

    <script defer src="~/App/Orden/Edit.js"></script>


}
